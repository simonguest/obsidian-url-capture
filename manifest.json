{
  "manifest_version": 3,
  "name": "Obsidian URL Capture",
  "version": "1.0",
  "description": "Append the current URL to Obsidian daily note",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "append-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+O"
      },
      "description": "Append current URL to Obsidian daily note using a keyboard shortcut. Click on the extension icon to set the vault name."
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
